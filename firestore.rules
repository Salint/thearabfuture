rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read: if true
      allow write: if request.auth != null && request.auth.uid == uid
    }
     match /articles/{id} {
      allow read: if true
      allow write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/config/staff).data.privileged
    }
  }
}